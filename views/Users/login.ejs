<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h3 class="col-6 offset-3">Login</h3>
    <div class="col-6 offset-3 loginclass">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label><br>
                <input type="text" name="username" placeholder="enter" class="form-control" required>
                <div class="valid-feedback">Looks good</div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label><br>
                    <input type="password" name="password" placeholder="enter" class="form-control" required>
                    <div class="valid-feedback">Looks good</div>
                    </div>  
                    <div class="mb-3">
                    <button class="btn btn-dark">Login</button>
                    </div>
        </form>
        <br>
    </div>
</div>