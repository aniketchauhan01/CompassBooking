<% layout("/layouts/boilerplate") %>

<%- include("../includes/menu.ejs") %>


<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2 mt-3">
    <% for(let list of filteredlisting){  %>
        <a href="/listing/<%= list._id %>" class="listing-link">
    <div class="card col listing-card" >

        <img src="<%= list.image.url %>" class="card-img-top" alt="listing_image" style="height:20rem">
        <div class="card-img-overlay"></div>
        <div class="card-body">
            <p class="card-text">
         <b><%= list.title %></b> <br>
         &#8377;  <%= list.price.toLocaleString("en-IN") %>/night
         <i class="tax-info"> &nbsp; +18% GST</i>
            </p>
        </div>
      </div>
      <% } %>
    </a>
    </div>

